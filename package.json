{
  "name": "CSSModulesExample",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint . && stylelint 'src/**/*.@(css|scss)'",
    "postinstall": "patch-package",
    "start": "react-native start",
    "test": "jest",
    "web": "webpack serve --mode development"
  },
  "dependencies": {
    "es6-shim": "^0.35.8",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "react-fontawesome": "^1.6.1",
    "react-native": "0.74.3",
    "react-native-fontawesome": "5.7.0",
    "react-native-web": "^0.19.12"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/runtime": "^7.24.7",
    "@react-native/babel-preset": "0.74.84",
    "@react-native/eslint-config": "0.74.85",
    "@react-native/metro-config": "0.74.84",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^29.6.3",
    "babel-loader": "^9.1.3",
    "babel-plugin-react-native-classname-to-style": "^1.2.2",
    "babel-plugin-react-native-platform-specific-extensions": "^1.1.1",
    "babel-preset-react": "7.0.0-beta.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.19.0",
    "eslint-plugin-css-modules": "^2.12.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.6.3",
    "mini-css-extract-plugin": "^2.8.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.39",
    "postcss-css-variables": "^0.19.0",
    "postcss-loader": "^8.1.0",
    "postcss-scss": "^4.0.9",
    "prettier": "3.3.2",
    "react-hot-loader": "^4.13.1",
    "react-native-postcss-transformer": "^2.0.0",
    "react-native-sass-transformer": "^3.0.0",
    "react-test-renderer": "18.2.0",
    "sass": "^1.77.6",
    "sass-loader": "^14.1.1",
    "style-loader": "^4.0.0",
    "stylelint": "^16.6.1",
    "stylelint-config-react-native-css-modules": "^3.2.0",
    "stylelint-react-native": "^2.7.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "IE 11",
    "Android >= 4.4",
    "iOS >= 8"
  ],
  "postcss": {
    "plugins": {
      "postcss-css-variables": {}
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "css-modules"
    ],
    "extends": [
      "@react-native-community",
      "plugin:css-modules/recommended"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-react-native-css-modules",
    "overrides": [
      {
        "files": [
          "*.scss"
        ],
        "customSyntax": "postcss-scss"
      }
    ],
    "rules": {
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]*$",
      "declaration-block-no-duplicate-properties": true,
      "no-duplicate-selectors": true,
      "no-extra-semicolons": true,
      "no-eol-whitespace": true,
      "no-missing-end-of-source-newline": true
    }
  }
}
